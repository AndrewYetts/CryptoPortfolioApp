@model IEnumerable<CryptoPortfolioApp.Models.Currency>

@{
    ViewData["Title"] = "Index";
}


<form class="input-group mb-3" asp-controller="Currencies" asp-action="Index">
    <a style="margin-right: 50%" asp-controller="Currencies" asp-action="Create">
        <input type="button" class="btn btn-success" value="Add Currency" />
    </a>
    <input type="text" class="form-control" name="searchString" placeholder="Currency Name">
    <button type="submit" class="btn btn-secondary">Search</button>
</form>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortfolioValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DailyChange)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PortfolioValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DailyChange)
            </td>
            <td align="center">
                <a class="button" asp-action="Edit" asp-route-id="@item.Id">
                    <input type="button" class="btn btn-sm btn-outline-info" value="Update"/>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <input type="button" class="btn btn-sm btn-outline-danger" value="Delete"/>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
