@model CryptoPortfolioApp.Models.Currency

@{
    ViewData["Title"] = "Edit";
}

<h2>Update Currency Quantity</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="OwnerName" />
            <input type="hidden" asp-for="Value" />
            <input type="hidden" asp-for="PortfolioValue" />
            <input type="hidden" asp-for="DailyChange" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <a asp-action="Index" asp-controller="Currencies">
                    <input type="button" class="btn btn-secondary" value="Back" />
                </a>
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
